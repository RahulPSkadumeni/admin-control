
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5 ">Edit User</h3>
                        <form action="/admin/edit/{{userData._id}}" method="POST" enctype="multipart/form-data">
                            <div class="form-outline mb-4">
                                <input type="text" id="name" name="name" class="form-control form-control-lg" value="{{userData.name}}" required />
                                <label class="form-label" for="name">Name</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="email" id="email-2" name="email" class="form-control form-control-lg" value="{{userData.email}}" required/>
                                <label class="form-label" for="email">Email</label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Edit User</button>
                        </form>
                        <hr class="my-4">
                    <p class="mt-4 text-center">return to admin <a href="/admin">panel</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
